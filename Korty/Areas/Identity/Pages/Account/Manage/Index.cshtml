@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container">
    <h1 class="title is-3 mb-5">Profil</h1>
    
    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="notification is-success is-light mb-5">
            <button class="delete"></button>
            @Model.StatusMessage
        </div>
    }

    <div class="columns">
        <div class="column">
            <div class="box">
                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="notification is-danger" role="alert"></div>

                    <div class="field">
                        <label asp-for="Username" class="label">Nazwa użytkownika</label>
                        <div class="control has-icons-left">
                            <input asp-for="Username" class="input" type="text" placeholder="Nazwa użytkownika" disabled />
                            <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                            </span>
                        </div>
                    </div>

                    <div class="field">
                        <label asp-for="Input.PhoneNumber" class="label">Numer telefonu</label>
                        <div class="control has-icons-left">
                            <input asp-for="Input.PhoneNumber" class="input" type="tel" placeholder="Numer telefonu" />
                            <span class="icon is-small is-left">
                                <i class="fas fa-phone"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Input.PhoneNumber" class="help is-danger"></span>
                    </div>

                    <div class="field">
                        <label asp-for="Input.FirstName" class="label">Imię</label>
                        <div class="control has-icons-left">
                            <input asp-for="Input.FirstName" class="input" type="text" placeholder="Imię" />
                            <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                            </span>
                        </div>
                    </div>

                    <div class="field">
                        <label asp-for="Input.LastName" class="label">Nazwisko</label>
                        <div class="control has-icons-left">
                            <input asp-for="Input.LastName" class="input" type="text" placeholder="Nazwisko" />
                            <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                            </span>
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <button id="update-profile-button" type="submit" class="button is-primary is-medium">Zapisz</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
