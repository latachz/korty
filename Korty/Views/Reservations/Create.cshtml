@model Korty.DTOs.CreateReservationDTO

@{
    ViewData["Title"] = "Nowa rezerwacja";
    var courtSelectList = ViewBag.CourtId as SelectList;
    var selectedDate = ViewBag.SelectedDate as DateTime? ?? DateTime.Today;
}

<div class="container">
    <h1 class="title">Nowa rezerwacja</h1>

    <div class="box">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="notification is-danger is-light"></div>
            <div class="field">
                <label class="label" asp-for="CourtId"></label>
                <div class="control">
                    <input class="input" type="text" value="@(courtSelectList?.FirstOrDefault(x => x.Value == Model.CourtId.ToString())?.Text ?? "")" readonly />
                    <input type="hidden" asp-for="CourtId" />
                </div>
                <span asp-validation-for="CourtId" class="help is-danger"></span>
            </div>

            <div class="field">
                <label class="label" asp-for="Date"></label>
                <div class="control">
                    <input class="input" type="date" asp-for="Date" min="@DateTime.Today.ToString("yyyy-MM-dd")" required readonly />
                </div>
                <span asp-validation-for="Date" class="help is-danger"></span>
            </div>

            <div class="field">
                <label class="label" asp-for="StartTime"></label>
                <div class="control">
                    <input class="input" type="time" asp-for="StartTime" required readonly />
                </div>
                <span asp-validation-for="StartTime" class="help is-danger"></span>
            </div>

            <div class="field">
                <label class="label" asp-for="EndTime"></label>
                <div class="control">
                    <input class="input" type="time" asp-for="EndTime" required readonly />
                </div>
                <span asp-validation-for="EndTime" class="help is-danger"></span>
            </div>

            <div class="field is-grouped">
                <div class="control">
                    <button type="submit" class="button is-primary">Zarezerwuj</button>
                </div>
                <div class="control">
                    <a class="button is-light" asp-action="Index">Anuluj</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
