@model IEnumerable<Korty.DTOs.CourtDTO>

@{
    ViewData["Title"] = "Korty";
}

<div class="container">
    <div class="level">
        <div class="level-left">
            <div class="level-item">
                <h1 class="title">Korty</h1>
            </div>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="level-right">
                <div class="level-item">
                    <a class="button is-primary" asp-action="Create">Dodaj kort</a>
                </div>
            </div>
        }
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="notification is-success is-light">
            <button class="delete"></button>
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="columns is-multiline">
        @foreach (var court in Model)
        {
            <div class="column is-one-third">
                <div class="card">
                    <div class="card-content">
                        <p class="title is-4">@court.Name</p>
                        @if (!string.IsNullOrEmpty(court.Description))
                        {
                            <p class="subtitle is-6">@court.Description</p>
                        }
                        <div class="tags">
                            @if (court.IsActive)
                            {
                                <span class="tag is-success">Dostępny</span>
                            }
                            else
                            {
                                <span class="tag is-danger">Niedostępny</span>
                            }
                        </div>
                    </div>
                    <footer class="card-footer">
                        <a class="card-footer-item" asp-action="Details" asp-route-id="@court.Id">Szczegóły</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="card-footer-item" asp-action="Edit" asp-route-id="@court.Id">Edytuj</a>
                            <a class="card-footer-item" asp-action="Delete" asp-route-id="@court.Id">Usuń</a>
                        }
                    </footer>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="notification is-info">
            Brak dostępnych kortów.
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}