@model IEnumerable<Korty.DTOs.CourtDTO>

@{
    ViewData["Title"] = "Korty";
}

<div class="container">
    <div class="level">
        <div class="level-left">
            <div class="level-item">
                <h1 class="title">Korty</h1>
            </div>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="level-right">
                <div class="level-item">
                    <a class="button is-primary" asp-action="Create">Dodaj kort</a>
                </div>
            </div>
        }
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="notification is-success is-light">
            <button class="delete"></button>
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="columns is-multiline">
        @foreach (var court in Model)
        {
            <div class="column is-one-third">
                <div class="card">
                    <div class="card-content">
                        <p class="title is-4">@court.Name</p>
                        @if (!string.IsNullOrEmpty(court.Description))
                        {
                            <p class="subtitle is-6">@court.Description</p>
                        }
                        <div class="tags">
                            @if (court.IsActive)
                            {
                                <span class="tag is-success">Dostępny</span>
                            }
                            else
                            {
                                <span class="tag is-danger">Niedostępny</span>
                            }
                        </div>
                    </div>
                    <footer class="card-footer">
                        <a class="card-footer-item" asp-action="Details" asp-route-id="@court.Id">Szczegóły</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="card-footer-item" asp-action="Edit" asp-route-id="@court.Id">Edytuj</a>
                            <a class="card-footer-item" asp-action="Delete" asp-route-id="@court.Id">Usuń</a>
                        }
                    </footer>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="notification is-info">
            Brak dostępnych kortów.
        </div>
    }

    @if (ViewBag.CourtStatistics != null)
    {
        <div class="mt-6">
            <h2 class="title is-4">Statystyki rezerwacji</h2>
            <div class="table-container">
                <table class="table is-fullwidth is-striped">
                    <thead>
                        <tr>
                            <th>Kort</th>
                            <th>Wszystkie rezerwacje</th>
                            <th>Aktywne</th>
                            <th>Anulowane</th>
                            <th>Suma godzin</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var stat in (List<Korty.DTOs.CourtStatisticsDTO>)ViewBag.CourtStatistics)
                        {
                            <tr>
                                <td><strong>@stat.CourtName</strong></td>
                                <td>@stat.TotalReservations</td>
                                <td><span class="tag is-success">@stat.ActiveReservations</span></td>
                                <td><span class="tag is-danger">@stat.CancelledReservations</span></td>
                                <td><strong>@stat.TotalHours.ToString("F1")</strong> h</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}